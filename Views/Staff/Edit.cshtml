@using DemoAppMvc.Models
@using (Html.BeginForm("Edit", "YourController", FormMethod.Post))
@model Staff;
@{
    @Html.AntiForgeryToken()
    string pageTitle = ViewBag.Header;
}

<html>
<head>
    <title>@pageTitle</title>
    <style>
        .body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
            align-items: center; /* Center horizontally */
            justify-content: center;
            box-sizing: border-box; /* Include padding in the total width/height */
        }

        #button-id {
            display: inline;
            position: absolute;
            top: 14%;
            right: 20%;
        }

        .button {
            text-align: center;
            text-decoration: none;
            color: black;
            margin: 10px;
            display: inline;
            position: absolute;
            right: 20%;
        }

            .button:hover {
                color: brown;
            }
    </style>
</head>
<body>
    <div class="body">
        <h1>@pageTitle</h1>
        <nav id="button-id">
            <a class="button" asp-controller="Staff" asp-action="">Back</a>
        </nav>
        <br />
        <form asp-controller="Staff" asp-action="Edit" method="POST">
            <br />
            <label>First Name:</label><br />
            <input type="text" name="FirstName" asp-for="FirstName" /><br /><br />

            <label>Last Name:</label><br />
            <input type="text" name="LastName" asp-for="LastName"/><br /><br />

            <label>Age:</label><br />
            <input type="number" name="Age" asp-for="Age" /><br /><br />

            <input type="submit" value="SAVE" />
        </form>
    </div>
</body>
</html>